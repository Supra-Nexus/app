{
  "name": "zoo-i18n",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/zoo-i18n/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project zoo-i18n --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/zoo-i18n",
        "main": "libs/zoo-i18n/src/index.ts",
        "tsConfig": "libs/zoo-i18n/tsconfig.lib.json",
        "packageJson": "libs/zoo-i18n/package.json",
        "assets": []
      }
    },
    "generate-i18n": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/zoo-i18n",
        "commands": ["npx tsx ./scripts/translations.ts"]
      }
    },
    "i18n": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/zoo-i18n",
        "commands": ["npx tsx ./scripts/translations.ts && npx lobe-i18n"]
      }
    }
  }
}
