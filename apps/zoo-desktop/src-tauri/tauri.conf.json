{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "appimage",
      "nsis",
      "dmg"
    ],
    "externalBin": [
      "external-binaries/zood/zood",
      "external-binaries/zood/zoo-tools-runner-resources/deno",
      "external-binaries/zood/zoo-tools-runner-resources/uv",
      "external-binaries/ollama/ollama"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "llm-models/"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0"
    },
    "createUpdaterArtifacts": true
  },
  "productName": "Zoo AI",
  "version": "../../../package.json",
  "identifier": "com.zoo.desktop",
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY5RTREOUVBODQ0QUYwRDQKUldUVThFcUU2dG5rYVV1MjlvS2FGKzZSMVFnRnFVdUh1ZnVWc2pDSHFqWThaYUFneC9rUU1Gc2MK",
      "endpoints": [
        "https://api.github.com/repos/zooai/app/releases/latest"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    },
    "deep-link": {
      "desktop": {
        "schemes": [
          "zoo"
        ]
      }
    }
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "transparent": true,
        "title": "Zoo AI",
        "width": 1280,
        "height": 840,
        "resizable": true,
        "dragDropEnabled": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "create": false
      },
      {
        "fullscreen": false,
        "label": "spotlight",
        "transparent": true,
        "title": "Spotlight",
        "width": 800,
        "height": 490,
        "resizable": true,
        "dragDropEnabled": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "url": "src/windows/spotlight/index.html",
        "center": true,
        "skipTaskbar": true,
        "shadow": true,
        "decorations": false,
        "visible": false,
        "closable": false,
        "parent": null,
        "create": false
      },
      {
        "fullscreen": false,
        "label": "coordinator",
        "transparent": true,
        "title": "Coordinator",
        "width": 720,
        "height": 470,
        "resizable": false,
        "dragDropEnabled": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "url": "src/windows/coordinator/index.html",
        "center": true,
        "skipTaskbar": false,
        "shadow": false,
        "decorations": false,
        "visible": false,
        "closable": false,
        "parent": null,
        "create": false
      },
      {
        "label": "zoo-node-manager",
        "url": "src/windows/zoo-node-manager/index.html",
        "transparent": true,
        "title": "Zoo Node Manager",
        "width": 1280,
        "height": 840,
        "resizable": true,
        "dragDropEnabled": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "create": false
      }
    ],
    "macOSPrivateApi": true
  }
}